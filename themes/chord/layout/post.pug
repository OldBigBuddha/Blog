extends _include/layout

block title
  title= `${page.title} | ${config.title}`

block style
  link(rel="stylesheet", href=url_for("/css/post/post.css"), media="print", onload="this.media='all'")

  if page.code === true
    link(rel="stylesheet", href=url_for("/css/font.css"), media="print", onload="this.media='all'")
    link(rel="stylesheet", href=url_for("/css/post/syntax_highlight.css"), media="print", onload="this.media='all'")

block content
  main
    article.content__post.mt-4
      h1.text-center.text-4xl= page.title
      div.text-center.mb-4= page.date.format(config.date_format)

      //- 【Simple is Best】上部 - タイトル下
      ins.adsbygoogle(style='display:inline-block;width:728px;height:90px', data-ad-client='ca-pub-2427798032219417', data-ad-slot='1019140575')
      script.
        (adsbygoogle = window.adsbygoogle || []).push({});


      hr#top

      section!= page.content

      hr

    link(rel="stylesheet", href=url_for("/css/component/tag.css"), media="print", onload="this.media='all'")
    if page.tags
      .post__tags
        p#tags__title Tags
        ul
          for tag in page.tags.toArray()
            li: a(href=url_for(tag.path))= tag.name

  include _include/share

  include _include/paginator

  //- 【Simple is Best】下部 - ページネーション下
  ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-2427798032219417', data-ad-slot='6159786614', data-ad-format='auto', data-full-width-responsive='true')
  script.
    (adsbygoogle = window.adsbygoogle || []).push({});

