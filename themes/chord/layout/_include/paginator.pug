if page.prev || page.next
  link(rel="stylesheet", href=url_for("/css/component/paginator.css"))
  #paginator
    if page.layout === "post"
      if page.prev
        #newer
          a(href=url_for(page.prev_link || page.prev.path))= page.prev.title
      if page.next
        #older
          a(href=url_for(page.next_link || page.next.path))= page.next.title
    else
      if page.prev
        #newer
          a(href=url_for(page.prev_link || page.prev.path)) 新しい記事へ

      if page.next
        #older
          a(href=url_for(page.next_link || page.next.path)) 古い記事へ