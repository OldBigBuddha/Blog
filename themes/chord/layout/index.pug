extends _include/layout

block title
  title= config.title

block style
  link(rel="stylesheet", href=url_for("/css/index.css"))
  link(rel="stylesheet", href=url_for("/css/component/tag.css"))

block content
  div.content__index
    .posts.typo
      for post in page.posts.toArray()
          .post
            h2.post__title
              a(href=url_for(post.path))
                = post.title
            .post__date= post.date.format(config.date_format)
            if post.tags
              .post__tags
                ul
                  for tag in post.tags.toArray()
                    li: a(href=url_for(tag.path))= tag.name

  hr

block pagination
  include _include/paginator
