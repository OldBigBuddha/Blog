header
  h1
    a
      color #333
.content__index

  .posts
    overflow hidden

    .post
      margin-top 60px

      .post__title
        text-align left
        font-size 1.5rem
        margin-bottom 5px

        a
          display inline-block
          text-decoration none
          color #333

          &::after
            content ""
            display block
            width 0
            margin 5px auto 0
            height 3px
            background-color #1FAE89

          &:hover
            &::after
              width 100%
              transition @width .5s ease .1s

      .post__date
        text-align left
        font-size 1.4rem
        color #aaa
        font-style italic

      .post__content
        font-size 1.6rem
