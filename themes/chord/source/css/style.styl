@import '_variables'
@import 'syntax_highlight'

ul, ol, li
  list-style none
  margin 0
  padding 0

a
  text-decoration none
  color #1FAE89

p
  margin-bottom 1.2em

img
  max-width 100%
  padding 0.5em 0
  margin auto
  display block

/*=========
  Page Style
=========*/

.content
  width 800px
  margin 50px auto 50px

@media screen and (max-width: 800px) and (min-width: 480px)
  .content
    width 90%

@media screen and (max-width: 480px)
  .content
    width 90%

.content__index
  .posts
    overflow hidden
    .post
      margin-top 60px
      &::after
        content ""
        display block
        width 100%
        height 5px
        margin 30px auto 0
        background: url(/images/leaf.png) repeat 0 0 / 31px 5px

      .post__title
        text-align left
        font-size 2.4rem
        margin-bottom 5px
        a
          display inline-block
          color #333
          &::after
            content ""
            display block
            width 0
            margin 5px auto 0
            height 3px
            background-color #1FAE89
          &:hover
            &::after
              width 100%
              transition @width .5s ease .1s

      .post__date
        text-align left
        font-size 1.4rem
        color #aaa
        font-style italic

      .post__content
        font-size 1.6rem

.post__achive
  margin 70px auto 30px
  h2
    font-size 2.4rem

  .achive__list
    li
      margin-top: 10px;

      span
        font-size: 1.6rem

      a
        font-size 1.6rem
        margin-left 20px

@media screen and (max-width: 480px)
  .achive__list
    li
      span
        width 90px
        display inline-block
        vertical-align top

      a
        width calc(90% - 100px)
        display inline-block

.about
  margin 70px auto 30px