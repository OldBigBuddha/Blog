@import '_variables'

body
  background-color $bg_color
  color $font_color
  font-family $font_family
  font-style normal
  font-weight 400
  height 100vh
  width 100vw

#wrapper
  display flex
  flex-direction column
  min-height 100%

a
  color #1FAE89
  text-decoration none
  font-weight bold

img
  max-width 100%
  padding 0.5em 0
  margin auto
  display block

.content
  width 800px
  margin 2em auto

@media screen and (max-width: 959px)
  .content
    width 90%
    margin 0
    padding 2em 1em

@media screen and (max-width: 559px)
  .content
    width 100%
