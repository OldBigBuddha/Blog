@import '_variables'

body
  background-color $bg_color
  color $font_color
  font-family $font_family
  font-style normal
  font-weight 400

a
  color #1FAE89
  text-decoration none
  font-weight bold

img
  max-width 100%
  padding 0.5em 0
  margin auto
  display block

section.content
  width 800px
  margin 50px auto 50px

@media screen and (max-width: 800px) and (min-width: 480px)
  .content
    width 90%

@media screen and (max-width: 480px)
  .content
    width 90%
