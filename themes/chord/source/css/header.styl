header
  width 100%

nav.header
  width 100%
  margin 0 auto
  background-color #000

  .menu
    width 100%
    display flex
    flex-direction row
    justify-content space-around
    .menu__item
      align-items stretch
      font-size 2rem
      a
        padding 8px
        font-size 1.5rem
        color #fff

@media screen and (max-width: 480px)
  .header
    .menu
      .menu__item
        margin-left 10px