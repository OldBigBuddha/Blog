article.content__post
  section
    font-size 1.2em

    // 見出し
    h1, h2, h3, h4, h5, h6
      margin-top 1em
      margin-bottom 1em

    h1
      position relative
      background #dfefff
      box-shadow 0px 0px 0px 5px #dfefff
      border dashed 2px white
      padding 0.2em 0.5em
      color #454545
      &:after
        position absolute
        content ''
        left -7px
        top -7px
        border-width 0 0 15px 15px
        border-style solid
        border-color #fff #fff #a8d4ff
        box-shadow 1px 1px 1px rgba(0, 0, 0, 0.15)

    h2
      border-bottom dashed 2px #c6e3ff
      padding-left 4px
      font-size: 1em

    // 箇条書き

    ul li
      list-style none
      line-height 1.5
      padding 0.5em 0
      &:before
        font-family "Font Awesome 5 Free"
        font-weight 900
        content '\f152'
        margin 0 5px 0 -15px
        color #a8d4ff

    // 引用
    blockquote
      position relative
      padding 7px 16px
      box-sizing border-box
      font-style italic
      color #464646
      background-color #f0f7ff
      &:before
          display inline-block
          position absolute
          top -20px
          left -20px
          width 40px
          height 40px
          line-height 40px
          border-radius 50%
          vertical-align middle
          text-align center
          content "\f10d"
          font-family "Font Awesome 5 Free"
          font-weight 900
          background #72ccf4
          color #FFF
          font-size 22px
          font-weight 900
      &:after
          display inline-block
          position absolute
          bottom -20px
          right -20px
          width 40px
          height 40px
          line-height 40px
          border-radius 50%
          vertical-align middle
          text-align center
          content "\f10e"
          font-family "Font Awesome 5 Free"
          font-weight 900
          background #72ccf4
          color #FFF
          font-size 22px
          font-weight 900
      p
          padding 0
          margin 10px 0
          line-height 1.7
      cite
          display block
          text-align right
          color #888888
          font-size 0.9em

    // 強調・イタリック体

    // 水平線

    // リンク
    a
      color $primary


    img
      display block
      max-width 100%
      margin 1em auto