#share
  display flex
  justify-content space-between
  padding 4px
  width 100%
  cursor pointer

.button
  height 40px
  width 20%
  background-color white
  display flex
  box-shadow 2px 2px 1px gray
  transition: all .3s

  &:hover
    background-color black
    color white
  .fab
    flex 0 1 auto
    padding 12px

#hatebu
  img
    fill #000
    display block
    width 20px
    flex 0 1 auto
    margin auto
    &:hover
      fill #fff

#notification
  display none
  padding 16px